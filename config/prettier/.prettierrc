{
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "printWidth": 120
      }
    },
    {
      "files": "*.js",
      "options": {
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 120
      }
    },
    {
      "files": "*.ts",
      "options": {
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 180
      }
    },
    {
      "files": ["*.json", "*.jsonc"],
      "options": {
        "tabWidth": 2,
        "trailingComma": "none",
        "printWidth": 120
      }
    }
  ]
}
